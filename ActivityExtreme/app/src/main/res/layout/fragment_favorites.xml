<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.intern.tmob.activityextreme.FavoritesActivityFragment"
    android:background="@color/indigo_500">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/continue_button"
        android:layout_width="@dimen/fab_size_small"
        android:layout_height="@dimen/fab_size_small"
        app:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_tick"
        android:tint="@android:color/white"
        app:backgroundTint="@color/pink_a200"
        android:layout_gravity="top|right"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your favorites..."
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:id="@+id/textView"
            android:layout_gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/wall_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="420dp"/>

    </LinearLayout>

</FrameLayout>
