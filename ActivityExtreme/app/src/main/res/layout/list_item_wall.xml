<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/list_item_layout"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/list_item_cardview">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/list_item_image"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content"
                    android:onClick="pictureIsClicked"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:onClick="onItemClicked">
                    <TextView
                        android:text="Lukas Podolski"
                        android:id="@+id/list_item_name"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="pictureIsClicked"/>
                    <TextView
                        android:text="Baslik"
                        android:id="@+id/list_item_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onItemClicked"/>
                    <TextView
                        android:text="2 saat once"
                        android:id="@+id/list_item_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onItemClicked"/>
                    <TextView
                        android:text="aktivite detaylari burada olacak uzun uzun hatta bir kac satir ornek yazayim da daha belirgin olsun ornek"
                        android:id="@+id/list_item_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onItemClicked"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        card_view:cardElevation="4dp"
        android:id="@+id/list_item_cardview_buttons">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Like"
            android:id="@+id/list_item_like"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"/>
        <Button
            android:text="Comment"
            android:id="@+id/list_item_comment"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"/>
        <Button
            android:text="Share"
            android:id="@+id/list_item_share"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>