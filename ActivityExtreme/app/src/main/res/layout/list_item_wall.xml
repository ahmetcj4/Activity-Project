<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_cardview"
    android:layout_marginTop="4dp"
    app:elevation="3dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.intern.tmob.activityextreme.view.CircularImageView
                android:id="@+id/list_item_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                app:border="true"
                app:border_width="3dp"
                app:border_color="@color/primary_light" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:onClick="onItemClicked">
                <TextView
                    android:text="Lukas Podolski"
                    android:id="@+id/list_item_name"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="pictureIsClicked"/>
                <TextView
                    android:text="Baslik"
                    android:id="@+id/list_item_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onItemClicked"/>
                <TextView
                    android:text="2 saat once"
                    android:id="@+id/list_item_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onItemClicked"/>
                <TextView
                    android:text="aktivite detaylari burada olacak uzun uzun hatta bir kac satir ornek yazayim da daha belirgin olsun ornek"
                    android:id="@+id/list_item_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onItemClicked"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="?android:attr/dividerHorizontal"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Like"
                android:id="@+id/list_item_like"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="?android:attr/dividerVertical"/>
            <Button
                android:text="Comment"
                android:id="@+id/list_item_comment"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="?android:attr/dividerVertical"/>
            <Button
                android:text="Share"
                android:id="@+id/list_item_share"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
