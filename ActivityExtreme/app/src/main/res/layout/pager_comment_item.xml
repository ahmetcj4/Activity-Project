<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/pager_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_mini_margin"
        card_view:cardElevation="2dp"
        android:id="@+id/pager_item_cardview">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.intern.tmob.activityextreme.view.CircularImageView
                    android:id="@+id/pager_item_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginRight="4dp"
                    app:border="true"
                    app:border_width="3dp"
                    app:border_color="@color/divider" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Lukas Podolski"
                        android:id="@+id/pager_item_name"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Baslik"
                        android:id="@+id/pager_item_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="2 saat once"
                        android:id="@+id/pager_item_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="aktivite detaylari burada olacak uzun uzun hatta bir kac satir ornek yazayim da daha belirgin olsun ornek"
                        android:id="@+id/pager_item_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>